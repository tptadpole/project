container_commands:
  00_copy_env_file:
    command: "cp .env.example .env"
    cwd: "/var/app/staging"

  01_run_key_generate:
    command: "php artisan key:generate"
    cwd: "/var/app/staging"

  02_run_storage_link:
    command: "sudo chmod -R 755  /var/app/staging/storage/app/public"
    command: "ln -s /var/app/current/storage/app/public /var/app/current/public/storage"
    cwd: "/var/app/staging"
